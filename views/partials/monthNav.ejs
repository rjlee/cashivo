<%# Partial: Month navigation strip %>
<div class="nav-strip">
  <% if (prevYear && prevMonth) { %>
    <a class="prev-month" href="/years/<%= prevYear %>/<%= prevMonth %><%= insights ? '/insights' : '' %>">← <%= fmtMonthYear(prevYear + '-' + prevMonth) %></a>
  <% } else { %>
    <span class="disabled">← <%= fmtMonthYear((Number(month) === 1 ? Number(year) - 1 : year) + '-' + String(Number(month) === 1 ? 12 : Number(month) - 1).padStart(2, '0')) %></span>
  <% } %>
  <a class="nav-index" href="/years/<%= year %>/<%= month %><%= insights ? '/insights' : '' %>"><%= fmtMonthYear(year + '-' + month) %> <%= insights ? 'Insights' : 'Summary' %></a>
  <% if (nextYear && nextMonth) { %>
    <a class="next-month" href="/years/<%= nextYear %>/<%= nextMonth %><%= insights ? '/insights' : '' %>"><%= fmtMonthYear(nextYear + '-' + nextMonth) %> →</a>
  <% } else { %>
    <span class="disabled"><%= fmtMonthYear((Number(month) === 12 ? Number(year) + 1 : year) + '-' + String(Number(month) === 12 ? 1 : Number(month) + 1).padStart(2, '0')) %> →</span>
  <% } %>
</div>