<form method="get" action="<%= basePath %>" class="filter-form">
  <fieldset>
    <legend>Filter Transactions</legend>
    <label>
      Year:
      <select name="year">
        <option value="">All</option>
        <% yearsList.forEach((y) => { %>
          <option value="<%= y %>" <%= y === year ? 'selected' : '' %>><%= y %></option>
        <% }); %>
      </select>
    </label>
    <label>
      Month:
      <select name="month">
        <option value="">All</option>
        <% ['01','02','03','04','05','06','07','08','09','10','11','12'].forEach((m) => { %>
          <option value="<%= m %>" <%= m === month ? 'selected' : '' %>><%= fmtMonthYear('2000-' + m).split(' ')[0] %></option>
        <% }); %>
      </select>
    </label>
    <label>
      Category:
      <select name="category">
        <option value="">All</option>
        <% categoriesList.forEach((c) => { %>
          <option value="<%= c %>" <%= c === category ? 'selected' : '' %>><%= c %></option>
        <% }); %>
      </select>
    </label>
    <label>
      Date from:
      <input type="date" name="dateFrom" value="<%= dateFrom || '' %>" />
    </label>
    <label>
      Date to:
      <input type="date" name="dateTo" value="<%= dateTo || '' %>" />
    </label>
    <label>
      Amount ≥
      <input type="number" step="0.01" name="amountMin" value="<%= amountMin || '' %>" />
    </label>
    <label>
      Amount ≤
      <input type="number" step="0.01" name="amountMax" value="<%= amountMax || '' %>" />
    </label>
    <button type="submit">Apply Filters</button>
    <a href="<%= basePath %>">Clear Filters</a>
  </fieldset>
</form>