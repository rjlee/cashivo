<% title = year + ' Insights'; %>
<%- include('partials/head') %>
<%- include('partials/yearNav', { year, prevYear, nextYear, insights: true }) %>
<h1><%= year %> Insights</h1>

<%- include('partials/filterPanel', {
  period: year,
  categories: Object.keys(catDist),
  defaultUnchecked: { Savings: true, Transfers: true }
}) %>

<%- include('partials/categoryDistribution', {
  title: 'Spending Category Distribution',
  chartData: catDist,
  canvasId: 'categoryDistributionChart',
  jsVar: 'categoryDistributionChartRawData'
}) %>

<% if (Object.keys(topMerchantsData).length) { %>
  <h2>Top Merchants</h2>
  <canvas id="topMerchantsChart" width="600" height="150"></canvas>
  <script>
    window.topMerchantsChartRawData = <%- JSON.stringify(topMerchantsData) %>;
    window.topMerchantsChartCategoryData = <%- JSON.stringify(topMerchantsCategoryData) %>;
  </script>
<% } %>

<h2>Flagged Transactions</h2>
<% if (outliers && outliers.length) { %>
  <table id="flagged-transactions-table">
    <thead>
      <tr>
        <th title="Transaction date">Date</th>
        <th title="Transaction description or merchant">Description</th>
        <th title="Transaction amount">Amount</th>
        <th title="Assigned transaction category">Category</th>
      </tr>
    </thead>
    <tbody>
      <% outliers.forEach(function(o) { %>
        <tr data-category="<%= o.category %>">
          <td><%= o.date %></td>
          <td><%= o.description || '' %></td>
          <td><%= fmtCurrency(o.amount, currency) %></td>
          <td><a href="/years/<%= year %>/insights?category=<%= encodeURIComponent(o.category) %>"><%= o.category %></a></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <p>No flagged transactions.</p>
<% } %>

<%- include('partials/recurringTable', {
  recs,
  linkBase: `/years/${year}/insights`,
  currency
}) %>
<%- include('partials/footer') %>