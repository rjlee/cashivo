<%- include('partials/head', { title: 'Transactions: ' + category + ' (' + fmtMonthYear(year + '-' + month) + ')' }) %>
<h1>Transactions for <%= category %> in <%= fmtMonthYear(year + '-' + month) %></h1>
<p><a href="/years/<%= year %>/<%= month %>">‚Üê Back to month summary</a></p>
<%- include('partials/filterForm', {
  basePath: `/years/${year}/${month}/category/${category}`,
  yearsList,
  categoriesList: allCategories,
  year,
  month,
  category,
  dateFrom,
  dateTo,
  amountMin,
  amountMax
}) %>
<%- include('partials/bulkActionsForm', {
  basePath: `/years/${year}/${month}/category/${category}`,
  allCategories
}) %>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Notes</th>
      <th>Original Category</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% transactions.forEach(function(tx) { %>
      <tr>
        <td><%= tx.date || '' %></td>
        <td><%= tx.description || '' %></td>
        <td><%= fmtCurrency(tx.amount, currency) %></td>
        <td><%= tx.notes || '' %></td>
        <td><%= tx.originalCategory || '' %></td>
        <td>
          <%- include('partials/categoryEditor', { tx: tx, allCategories: allCategories }) %>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
<%- include('partials/footer') %>
<%- include('partials/categoryEditorScript') %>