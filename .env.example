# Example environment variables for cashivo
# Copy this file to `.env` and fill in the values as needed

# OpenAI API key for AI-based categorization (required if USE_AI=true)
OPENAI_API_KEY=

# Enable AI-based categorization: true or false
USE_AI=false

# Default currency code (3-letter ISO format, e.g., GBP, USD)
DEFAULT_CURRENCY=GBP

# Optional: monthly budgets JSON file
# BUDGETS_FILE=budgets.json

# Optional: savings goals JSON file
# GOALS_FILE=goals.json

# Optional: tax-deductible categories JSON file
# DEDUCTIBLE_CATEGORIES_FILE=deductible-categories.json